{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "main-*"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ke-mac",
          "cmd": "./resources/mac/kikoeru-express",
          "args": true
        },
        {
          "name": "ke-win",
          "cmd": "./resources/win/kikoeru-express.exe",
          "args": true
        },
        {
          "name": "ke-linux",
          "cmd": "./resources/linux/kikoeru-express",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "ke-mac",
          "cmd": "./resources/mac/kikoeru-express",
          "args": true
        },
        {
          "name": "ke-win",
          "cmd": "./resources/win/kikoeru-express.exe",
          "args": true
        },
        {
          "name": "ke-linux",
          "cmd": "./resources/linux/kikoeru-express",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-kill",
      "allow": [
        {
          "name": "ke-mac",
          "cmd": "./resources/mac/kikoeru-express",
          "args": true
        },
        {
          "name": "ke-win",
          "cmd": "./resources/win/kikoeru-express.exe",
          "args": true
        },
        {
          "name": "ke-linux",
          "cmd": "./resources/linux/kikoeru-express",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "ke-mac",
          "cmd": "./resources/mac/kikoeru-express",
          "args": true
        },
        {
          "name": "ke-win",
          "cmd": "./resources/win/kikoeru-express.exe",
          "args": true
        },
        {
          "name": "ke-linux",
          "cmd": "./resources/linux/kikoeru-express",
          "args": true
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "http://localhost:8888/*" }]
    }
  ]
}