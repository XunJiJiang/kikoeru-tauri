{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kikoeru-tauri",
  "version": "0.1.0",
  "identifier": "com.xunji.kikoeru-tauri",
    "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "kikoeru",
        "width": 560,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/mac/node_sqlite3.node": "resources/mac/node_sqlite3.node",
      "resources/mac/kikoeru-express": "resources/mac/kikoeru-express",
      "resources/win/node_sqlite3.node": "resources/win/node_sqlite3.node",
      "resources/win/kikoeru-express.exe": "resources/win/kikoeru-express.exe",
      "resources/linux/node_sqlite3.node": "resources/linux/node_sqlite3.node",
      "resources/linux/kikoeru-express": "resources/linux/kikoeru-express"
    }
  }
}
